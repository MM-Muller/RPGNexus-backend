{
    "name": "RPGNexus - Backend",
    // Aponta para o docker-compose.yml na raiz do projeto
    "dockerComposeFile": [
        "../../docker-compose.yml"
    ],
    // Especifica qual serviço deste compose o VS Code deve usar
    "service": "backend",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "mongodb.mongodb-vscode"
            ]
        }
    },
    // Comandos para rodar após o contêiner iniciar
    "postCreateCommand": "pip3 install --user -r requirements-dev.txt",
    "postStartCommand": "uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
    "remoteUser": "vscode"
}